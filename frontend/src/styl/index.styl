@import './mixins'
@import './variables'
@import './colors'


html.fixed
    position: fixed
    right: 0
    left: 0

body
    background-color: #eee

body, button, input
    margin: 0
    padding: 0
    -webkit-font-smoothing: antialiased
    //font-family: 'Work Sans', Lato, sans-serif
    font-family: Lato, sans-serif
    font-size: 16px
    color: $default

*
    box-sizing: border-box

h1, h2, h3, h4, h5
    margin: 0
    padding: 0

ul, li
    margin: 0
    padding: 0
    list-style: none

.footer, main
    max-width: 800px
    margin: 0 auto
    padding: pad(6)
    padding-top: pad(0)

.footer
    margin-top: pad(4)

.content
    padding: pad(6)
    padding-top: pad(6) + 60
    min-height: 100%
    display: flex
    flex-direction: column

    > :first-child
        flex-grow: 1


.instructions
    li
        position: relative
        margin-left: pad(10)
        margin-bottom: pad(4)
        &::before
            position: absolute
            content: '-'
            right: 100%
            margin-right: pad(2)

@import './animations'
@import './ui'

