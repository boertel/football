header
    position: sticky
    top: 0
    right: 0
    left: 0
    margin-bottom: 20px
    background: $secondary
    color: #fff
    z-index: 1

    a
        color: #fff
        text-decoration: none

    .header-content
        max-width: 800px
        padding: pad(1) pad(6)
        margin: 0 auto
        display: flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap

    .header-profile
        display: flex
        align-items: center
